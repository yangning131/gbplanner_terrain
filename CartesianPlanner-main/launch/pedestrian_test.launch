<?xml version="1.0"?>
<launch>
    <arg name="rviz" default="true" />
    <node pkg="cartesian_planner" type="reference_publisher.py" name="reference_publisher_node" output="screen" args="path static pedestrian dynamic serialize"  />
    <node pkg="cartesian_planner" type="node" name="cartesian_planner_node" output="screen" launch-prefix="xterm -e gdb -ex run --args"/>

    <group if="$(arg rviz)">
        <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find cartesian_planner)/config/config.rviz" />
    </group>
</launch>